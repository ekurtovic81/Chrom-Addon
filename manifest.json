{
  "manifest_version": 3,
  "name": "Export/Import History & Bookmarks",
  "version": "2.0.0",
  "description": "Export and import your browser history and bookmarks with cloud sync and automatic backups",
  "permissions": [
    "history",
    "bookmarks",
    "downloads",
    "storage",
    "alarms",
    "identity",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://api.dropboxapi.com/*",
    "https://graph.microsoft.com/*",
    "https://api.box.com/*",
    "https://api.pcloud.com/*",
    "https://g.api.mega.co.nz/*",
    "https://*.googleusercontent.com/*",
    "https://accounts.google.com/*"
  ],
  "action": {
    "default_title": "Export/Import History & Bookmarks"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon128.png",
    "32": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "491291805478-cnqldqi78p9ulr9q75mg3i0d7jfjbe92.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file"
    ]
  }
}
