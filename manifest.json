{
  "manifest_version": 3,
  "name": "Export/Import History & Bookmarks",
  "version": "4.0.0",
  "description": "Export and import your browser history and bookmarks with local auto-backup",
  "permissions": [
    "history",
    "bookmarks",
    "downloads",
    "storage",
    "alarms",
    "sidePanel"
  ],
  "action": {
    "default_title": "Export/Import History & Bookmarks"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon128.png",
    "32": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}