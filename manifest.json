{
  "manifest_version": 3,
  "name": "Export/Import History & Bookmarks",
  "version": "2.0.0",
  "description": "Export and import your browser history and bookmarks with cloud sync and automatic backups",
  "permissions": [
    "history",
    "bookmarks",
    "downloads",
    "storage",
    "alarms",
    "identity",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*.google.com/*",
    "*://*.googleapis.com/*",
    "*://*.dropboxapi.com/*",
    "*://*.microsoft.com/*",
    "*://*.box.com/*",
    "*://*.pcloud.com/*",
    "*://*.mega.co.nz/*"
  ],
  "action": {
    "default_title": "Export/Import History & Bookmarks"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon128.png",
    "32": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
